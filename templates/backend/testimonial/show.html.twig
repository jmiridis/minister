{% extends 'backend.html.twig' %}

{% set page_title = "Testimonial #" ~ testimonial.id %}

{% block title %}Testimonial{% endblock %}

{% block body %}
    <h1>Testimonial</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ testimonial.id }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ testimonial.content }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ testimonial.image }}</td>
            </tr>
            <tr>
                <th>Position</th>
                <td>{{ testimonial.position }}</td>
            </tr>
            <tr>
                <th>IsActive</th>
                <td>{{ testimonial.isActive ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('backend_testimonial_index') }}">back to list</a>

    <a href="{{ path('backend_testimonial_edit', {'id': testimonial.id}) }}">edit</a>

    {{ include('testimonial/_delete_form.html.twig') }}
{% endblock %}
