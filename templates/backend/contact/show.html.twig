{% extends 'backend.html.twig' %}

{% set page_title = "Contact Details" %}

{% block body %}

    {% embed 'backend/_common/headerButtonGroup.html.twig' %}
        {% block buttons %}
            {{ include('backend/_common/listButton.html.twig', {route: 'backend_contact_index', label:'list', title:'Contact List'}) }}
            {{ include('backend/contact/_delete_form.html.twig') }}
        {% endblock %}
    {% endembed %}

    <h1>{{ page_title }}</h1>

    <table class="table table-condensed">
        <tbody>
            <tr>
                <th>ID</th>
                <td>{{ contact.id }}</td>
            </tr>
            <tr>
                <th>Wedding date</th>
                <td>{% if contact.weddingDate is empty %}- not provided - {% else %}{{ contact.weddingDate|date('D, d M Y') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Location</th>
                <td>{{ contact.location }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ contact.name }} <a href="mailto:{{ contact.email }}"><i class="fa fa-envelope"></i> {{ contact.email }}</a></td>
            </tr>
            <tr>
                <th>Message</th>
                <td>{{ contact.message }}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{{ contact.created ? contact.created|date('D, d M Y H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Updated</th>
                <td>{{ contact.updated ? contact.updated|date('D, d M Y H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>
{% endblock %}
