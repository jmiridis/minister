{% extends 'base.html.twig' %}

{% block title %}Picture{% endblock %}

{% block body %}
    <h1>Picture</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ picture.id }}</td>
            </tr>
            <tr>
                <th>Caption</th>
                <td>{{ picture.caption }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ picture.description }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ picture.image }}</td>
            </tr>
            <tr>
                <th>Position</th>
                <td>{{ picture.position }}</td>
            </tr>
            <tr>
                <th>IsActive</th>
                <td>{{ picture.isActive ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ picture.updatedAt ? picture.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{{ picture.created ? picture.created|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Updated</th>
                <td>{{ picture.updated ? picture.updated|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>DeletedAt</th>
                <td>{{ picture.deletedAt ? picture.deletedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_picture_index') }}">back to list</a>

    <a href="{{ path('app_picture_edit', {'id': picture.id}) }}">edit</a>

    {{ include('picture/_delete_form.html.twig') }}
{% endblock %}
